source 'https://rubygems.org'

# Use GitHub Pages gem which includes the correct Jekyll version
gem 'github-pages', group: :jekyll_plugins

# Jekyll plugins (these are included in github-pages but explicitly listed for clarity)
group :jekyll_plugins do
  gem 'jekyll-feed'
  gem 'jekyll-sitemap'
  gem 'jekyll-redirect-from'
  gem 'jemoji'
  gem 'jekyll-seo-tag'
end

# Additional gems
gem 'webrick', '~> 1.8'
gem 'connection_pool', '2.5.0'

# Ruby version specification (optional but recommended)
ruby '>= 2.7.0'
